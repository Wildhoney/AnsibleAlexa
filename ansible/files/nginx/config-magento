server {

    listen {{ nginx_broadcast_port }};
    # listen 443 ssl;
    root /usr/share/nginx/www/magento/web-root;
    index lightspeed.php index.php index.html index.htm;

    server_name ~^(?:([a-zA-Z0-9]+)\.)?{{ host_magento }}$;
    sendfile off;

    # Magento SSL Certificate!
    ssl_certificate     magento.crt;
    ssl_certificate_key magento.key;
    ssl_protocols       SSLv3 TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers         HIGH:!aNULL:!MD5;

    access_log /var/log/nginx/magento.log;
    error_log /var/log/nginx/magento.log;

    location ^~ /app/ {
        deny all;
    }

    location ~ /(skin|media)/ {
        access_log off;
        expires 30d;
    }

    location ~ [^/]\.php(/|$) {

        if (!-e $request_filename) { rewrite / /lightspeed.php last; } #;

        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param MAGE_ROOT_DIR /usr/share/nginx/www/magento;
        fastcgi_pass  127.0.0.1:9000;
        fastcgi_index lightspeed.php;
        # fastcgi_param HTTP_HOST {{ host_magento }};
        # fastcgi_param MAGE_IS_DEVELOPER_MODE 1;
        include fastcgi_params;
        fastcgi_read_timeout 18000;

    }

    location ^~ /includes/ {
        deny all;
    }

    location ^~ /lib/ {
        deny all;
    }

    location ^~ /media/downloadable/ {
        deny all;
    }

    location ^~ /pkginfo/ {
        deny all;
    }

    location ^~ /report/config.xml {
        deny all;
    }

    location ^~ /var {
        deny all;
    }

    location /. {
        return 404;
    }

    location @handler {
        rewrite / /lightspeed.php;
    }

    location / {
        root /usr/share/nginx/www/magento/web-root;
        index lightspeed.php index.html index.htm index.php;
        try_files try_files $uri $uri/ @handler;
    }

	location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass 127.0.0.1:9000;
        fastcgi_index lightspeed.php;
        include fastcgi_params;
    }

}